<?xml version="1.0" encoding="UTF-8"?>


<messages>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="styleshe" />

  <message id="login">
    <div class="row vh-100 vw-100">
      <div class="col-sm-12 my-auto d-flex justify-content-center">
        <div class="card bg-dark text-white" style="width:400px; height:550px; border-radius: 5%">
          <div class="card-body align-items-center mx-5">

            <div class="text-center mt-3">
              <h1>${title}</h1>
              <p>${help}</p>
            </div>

            <form class="row form-floating mt-5">
              ${userInput}
              <label for="userInput">Username</label>
            </form>
            <form class="row form-floating mt-4">
              ${passInput}
              <label for="passInput">Password</label>
            </form>
            <div class="container text-center mt-5">
              ${okBtn}
              <div class="mt-5">
                ${bottomTxt}
                ${linkBtn}
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </message>

  <message id="list">
    <div class="vh-100">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">

          <div class="card" style="border-radius: 1rem; background-color: #eff1f2;">
            <div class="card-body py-4 px-md-5">
              ${backBtn}
              <p class="h1 text-dark text-center mt-3 mb-4 pb-3">
                  What's on the list for today?
                </p>

              <div class="card row card-block flex-row d-flex justify-content-center">
                <div class="card-body row d-flex flex-row justify-content-center align-items-center">
                  <div class="col">
                    ${addListField}
                  </div>
                  <div class="col d-flex">
                    <div class="col">
                      <div class="input-group">
                        ${popupBtn}${addTypeField}
                      </div>
                    </div>
                    <div class="col d-flex justify-content-center">
                      ${addBtn}
                    </div>
                  </div>
                </div>
              </div>

              <hr class="my-4" />
              <div class="d-flex justify-content-start align-items-center mb-4 pt-2 pb-3">
                <p class="small mb-0 me-2 text-muted">Filter</p>
                <div>${cbFilter}</div>
                <p class="small mb-0 ms-4 me-2 text-muted">Sort</p>
                <div>${cbSort}</div>
                <a href="#!" style="color: #23af89;" data-mdb-toggle="tooltip" title="Ascending">
                  <i
                    class="fas fa-sort-amount-down-alt ms-2"></i>
                </a>
              </div>

              <div>
                ${table}
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </message>

  <message id="main">

    <div class="vh-100 vw-100">
      <button type="button">X</button>

      <center>
        <h1 class="title" style="color:rgb(34, 62, 91);">Hello, Jessica.</h1>
      </center>


      <div class="container">
        <div class="row">
          <div class="col" style="border:1px solid black;">
            <div class="row">
              <img class="weather" src="../images/temperature.png">23Â°C</img>
              <img class="weather" src="../images/weather.png" width="50" height="50">Cloudy.</img>
            </div>
            <div class="row">
              <h1 style="color:rgb(34, 62, 91);font-size: 20px">London, ON</h1>
            </div>
          </div>
          <div class="col-sm-4" style="border:1px solid black;">
            <div class="row" style="border:1px solid black;">
              <button type="button" class="btn btn-primary btn-square-alarm">
                Alarm
                <img class="icon" src="../images/alarm.png"></img>
              </button>
              <button type="button" class="btn btn-primary btn-square-devices">
                Devices
                <img class="icon" src="../images/device.png"></img>
              </button>
            </div>
            <div class="row" style="border:1px solid black;">
              <button type="button" class="btn btn-primary btn-square-timer">
                Timer
                <img class="icon" src="../images/timer.png"></img>
              </button>
              <button type="button" class="btn btn-primary btn-square-settings">
                Settings
                <img class="icon" src="../images/settings.png"></img>
              </button>
              <button>
                ${openListUI}
                <img class="icon" src="../images/lists.png"></img>
              </button>
            </div>
          </div>
        </div>
      </div>

      <hr>
        <center>
          <b class="living-room" style="color:rgb(34, 62, 91);">My Home</b>
        </center>
      </hr>


      <div class="row">

        <img class="bulb" src="../images/bulb.png">
          <h1 class="bulb" style="font-size:10px"> Lamp</h1>
        </img>
        <h1 class="adjust">
          <label class="switch">
            <input class="switch-input" type="checkbox" />
            <span class="switch-label" data-on="On" data-off="Off"></span>
            <span class="switch-handle"></span>
          </label>
        </h1>
      </div>
      <div class="row">
        <img class="bulb" src="../images/bulb.png">
          <h1 class="bulb" style="font-size:10px">   My Room </h1>
        </img>
        <h1 class="adjust">
          <label class="switch">
            <input class="switch-input" type="checkbox" />
            <span class="switch-label" data-on="On" data-off="Off"></span>
            <span class="switch-handle"></span>
          </label>
        </h1>
      </div>
      <div class="row">
        <img class="bulb" src="../images/bulb.png">
          <h1 class="bulb" style="font-size:10px">   Patio</h1>
        </img>
        <h1 class="adjust">
          <label class="switch">
            <input class="switch-input" type="checkbox" />
            <span class="switch-label" data-on="On" data-off="Off"></span>
            <span class="switch-handle"></span>
          </label>
        </h1>
      </div>
      <div class="row">
        <img class="volume" src="../images/volume.png" style="width: 5%; height: 5%;">
          <h1 class="volume_text" style="font-size:10px">  Volume</h1>
        </img>

        <div class="slider">
          <label for="fader"></label>
          <input type="range" min="0" max="100" value="50" id="fader"
            step="20" list="volsettings" />
          <datalist id="volsettings">
            <option>0</option>
            <option>20</option>
            <option>40</option>
            <option>60</option>
            <option>80</option>
            <option>100</option>
          </datalist>
        </div>

      </div>
    </div>

  </message>

</messages>