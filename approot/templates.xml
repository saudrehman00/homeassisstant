<?xml version="1.0" encoding="UTF-8"?>


<messages>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="styleshe" />

  <message id="login">
    <div class="row vh-100 vw-100">
      <div class="col-sm-12 my-auto d-flex justify-content-center">
        <div class="card bg-dark text-white" style="width:400px; height:550px; border-radius: 5%">
          <div class="card-body align-items-center mx-5">

            <div class="text-center mt-3">
              <h1>${title}</h1>
              <p>${help}</p>
            </div>

            <form class="row form-floating mt-5">
              ${userInput}
              <label for="userInput">Username</label>
            </form>
            <form class="row form-floating mt-4">
              ${passInput}
              <label for="passInput">Password</label>
            </form>
            <div class="container text-center mt-5">
              ${okBtn}
              <div class="mt-5">
                ${bottomTxt}
                ${linkBtn}
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </message>

  <message id="menupage">
    <div class="sidebar">
      <div class="pb-4">
        ${backBtn}
      </div>
      ${sidebar}
    </div>
    <div class="content">
      ${content}
    </div>
  </message>

  <message id="clockpage">
    <div>
      ${addClockBtn}
    </div>
    ${clocks}
  </message>

  <message id="locationpage">
      ${content}
  </message>

  <message id="converter">
    <div class="row mx-2 d-flex flex-row justify-content-center">
      ${type class="form-control w-50 bg-secondary text-white"}
    </div>
    <div class="row mt-5 mx-2">
      <div class="col-md">
        <div class="input-group">
          ${left}
          <div class="input-group-append">
            ${leftSel class="form-control bg-secondary text-white"}
          </div>
        </div>
      </div>

      <div class="col-sm-1 fs-2 bg-white text-center">=</div>

      <div class="col-md">
        <div class="input-group">
          ${right}
          <div class="input-group-append">
            ${rightSel class="form-control bg-secondary text-white"}
          </div>
        </div>
      </div>
    </div>
    <div class="row"></div>
  </message>

  <message id="main">
    <div class="vh-100 vw-100">
      <button type="button">X</button>

      <center>
        <h1 class="title" style="color:rgb(34, 62, 91);">Hello ${username}</h1>
      </center>

      <div class="container">
        <div class="row">
          <div class="col" style="border:1px solid black;">
            <div class="row">
              <img class="weather" src="../images/temperature.png">23Â°C</img>
              <img class="weather" src="../images/weather.png" width="50" height="50">Cloudy.</img>
            </div>
            <div class="row">
              <h1 style="color:rgb(34, 62, 91);font-size: 20px">London, ON</h1>
            </div>
          </div>
        </div>
      </div>
    </div>

    ${sidebar class="sidebar bg-light"}

  </message>
</messages>