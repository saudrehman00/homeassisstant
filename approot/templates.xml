<?xml version="1.0" encoding="UTF-8"?>


<messages>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="styleshe" />

  <!-- XML template for the login form-->
  <message id="login">
    <div class="row vh-100 vw-100">
      <div class="col-sm-12 my-auto d-flex justify-content-center">
        <div class="card beige text-dark" style="width:400px; height:550px; border-radius: 5%">
          <div class="card-body align-items-center mx-5">

            <div class="text-center mt-3">
              <h1>${title}</h1>
              <p>${help}</p>
            </div>

            <form class="row form-floating mt-5">
              ${userInput}
              <label class="text-white" for="userInput">Username</label>
            </form>
            <form class="row form-floating mt-4">
              ${passInput}
              <label class="text-white" for="passInput">Password</label>
            </form>
            <div class="container text-center mt-5">
              ${okBtn}
              <div class="mt-5">
                ${bottomTxt}
                ${linkBtn}
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </message>

  <!-- XML template for a menu page-->
  <message id="menupage">
    <div class="sidebar">
      <div class="mb-5">
        ${backBtn}
      </div>
      ${sidebar}
    </div>
    <div class="content-open">
      ${content}
    </div>
  </message>

  <!--XML template for adding a clock-based event-->
  <message id="clockpage">
    <div>
      ${addClockBtn}
    </div>
    ${clocks}
  </message>

  <!-- XML template for the location settings-->
  <message id="locationpage">
      ${content}
  </message>

  <!-- XML template for the unit conversion app-->
  <message id="converter">
    <div class="row mx-2 d-flex flex-row justify-content-center">
      ${type class="form-control w-50 bg-secondary text-white"}
    </div>
    <div class="row mt-5 mx-2">
      <div class="col-md">
        <div class="input-group">
          ${left}
          <div class="input-group-append">
            ${leftSel class="form-control bg-secondary text-white"}
          </div>
        </div>
      </div>

      <div class="col-sm-1 fs-2 bg-white text-center">=</div>

      <div class="col-md">
        <div class="input-group">
          ${right}
          <div class="input-group-append">
            ${rightSel class="form-control bg-secondary text-white"}
          </div>
        </div>
      </div>
    </div>
    <div class="row"></div>
  </message>

  <!-- XML template for the main landing page-->
  <message id="main">
    <div class="content">
      <center>
        <h1 class="title" style="color:white;">Hello, ${username}</h1>
      </center>

      <div class="row mt-5 d-flex justify-content-center align-items-center">
          ${weather}
      </div>
      <div class="row mt-5 overflow-auto" style="height:650px">
          ${news}
      </div>
    </div>
    ${sidebar class="sidebar beige"}
  </message>

   <message id="changePass">
    <div class="row vh-100 vw-100">
      <div class="col-sm-12 my-auto d-flex justify-content-center">
        <div class="card beige text-dark" style="width:450px; height:650px; border-radius: 5%">
          <div class="card-body align-items-center mx-5">

            <div class="text-center mt-3">
              <h1>${title}</h1>
              <p>${help}</p>
            </div>

            <form class="row form-floating mt-5">
              ${currentPass}
              <label class="text-white" for="currentPass">Current Password</label>
            </form>
            <form class="row form-floating mt-4">
              ${newPass}
              <label class="text-white" for="newPass">Password</label>
            </form>
            <div class="container text-center mt-5">
              ${okBtn}
              <div class="mt-5">
                ${backBtn}
                ${linkBtn}
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </message>

</messages>